<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% if(!posts?.length){ %>
  <h6 class="text-center mt-5">No post found</h6>
  <% } %>  
<% posts?.forEach(function(post){ %>

<h1><%=post.title%></h1>
<p>
  <%=post.content.substring(0, 100) + " ..."%>
  <a href="/posts/<%=post._id%>">Read More</a>
</p>

<% }) %> <%- include("partials/footer"); -%>
